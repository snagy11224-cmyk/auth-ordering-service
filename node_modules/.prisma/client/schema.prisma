generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

////////////////////////////////////////////////////////////////////////////////////////////////
//write DB model/tables here and prisma will migrate it to postgress

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  orders   Order[]
}

model Order {
  id        String   @id @default(uuid())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  total     Float
  status    String
  createdAt DateTime @default(now())
}
